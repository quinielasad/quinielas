<?xml version="1.0" encoding="UTF-8" ?>
    <!--widget : Debe ser la raíz del documento XML para indicar que sigue la especificación W3C.
            Id : El identificador debe ser único para la aplicación. (formato: com.yourcompany.yourapp )
        version: Cuanto más grande mejor | versionCode:Es opcional(Se usa para los casos por ejemplo de Android)-->
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"	
        id        = "com.akmdab.QuinelasSopra"
        versionCode="000" 
        version   = "0.0.1">
    <!-- Para el caso de los iOS hace falta indicar que la compilación sea universal -->
	<!-- <preference name="target-device" value="universal" /> -->	
	<preference name="phonegap-version" value="3.3.0" />

    <!--El nombre de mi app -->
    <name>Quinielas Sopra</name>
    <!--La descripción de mi app -->
    <description>
        Juego de Quinielas
    </description>
    <!--Autor de la app -->
    <author href="https://build.phonegap.com" email="quinielasad@gmail.com">
       AKM y DAB
    </author>
	
	<icon src="img/appicon2.png" gap:role="default" />
	<icon src="img/icon_72.png" width="96" height="96" />
	<icon src="img/icon_72.png" width="72" height="72" />
	<icon src="img/icon_48.png" width="48" height="48" />
	<icon src="img/icon_36.png" width="36" height="36" />
	
    <!-- Imagen que muestra mientras se carga la app -->
	<gap:splash src="img/appinicio.png" />
	<gap:plugin name="com.adobe.plugins.gaplugin" />
    <!--Plugin para acceder al archivo-->
	<gap:plugin name="org.apache.cordova.file" version="1.0.1" />
    <gap:plugin name="org.apache.cordova.file-transfer" version="1.0.1" />
	
    <!-- Componentes phonegap -->
    <feature name="http://api.phonegap.com/1.0/battery"/>
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/contacts"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
	
    <!--Componente que permite el acceso a cualquier dominio desde la app-->
    <access origin="*" />

</widget>